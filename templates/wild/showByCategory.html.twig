{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% include 'wild/parts/_menuColumn.html.twig' %}
            <div class="col-12 offset-lg-1 col-sm-9 col-md-9 col-lg-9 py-5">
                <h1>Listes des séries</h1>
                <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 my-5">
                    {% for program in selectByCategory %}
                        <div class="col mb-4">
                            <a href="{{ path('wild_show', { 'slug': program.title | replace({' ':'-'}) }) }}">
                                <div class="card h-100">
                                    <img src="{{ program.poster }}" class="card-img-top" alt="{{ program.title }}">
                                    <div class="card-body">
                                        <h6 class="card-title">{{ program.title }}</h6>
                                        <p class="card-text">
                                            <small class="text-muted">{{ program.category.name }}</small>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% else %}
                        Aucune série trouvée.
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}