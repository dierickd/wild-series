{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container">
        <a class="btn btn-sm btn-dark mb-5"
           href="{{ path('wild_show', { 'slug': program.title | replace({' ':'-'}) }) }}">
            retour
        </a>
        <div class="media">
            <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
            <div class="media-detail">
                <div class="media-body">
                    <h1 class="mt-0">{{ program.title }}</h1>
                    <p>{{ program.summary }}</p>
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>Saison :</td>
                            <td>{{ season.number }}</td>
                        </tr>
                        <tr>
                            <td>Episodes :</td>
                            <td>{{ episodes | length }}</td>
                        </tr>
                        <tr>
                            <td>Sortie :</td>
                            <td>{{ season.year }}</td>
                        </tr>
                        <tr>
                            <td>Categorie :</td>
                            <td>{{ program.category.name }}</td>
                        </tr>
                        <tr>
                            <td>Acteurs :</td>
                            <td>
                                {% for actor in program.actors %}
                                    <p class="actor-wrapper">
                                        <a class="btn-custom"
                                           href="{{ path('wild_actor',
                                               {'slug': actor.name | replace({' ': '-'}) | lower,
                                                   'id': actor.id,
                                               }) }}">
                                            {{ actor.name }}
                                        </a>
                                    </p>
                                {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="list-episodes mt-5">
            {% for episode in episodes %}
                <div class="card mb-3 actor-card">
                    <div class="row no-gutters">
                        <div class="col-md-3">
                            {% if episode.poster %}
                                <img src="{{ episode.poster }}" class="card-img" alt="{{ episode.title }}">
                            {% else %}
                                <img src="{{ asset('build/images/movie.408ea2dd.png') }}" class="card-img card-img-actor-default" alt="{{ episode.title }}">
                            {% endif %}
                        </div>
                        <div class="col-md-9">
                            <div class="card-body">
                                <h5 class="card-title">{{ episode.title }}</h5>
                                <p class="card-text">{{ episode.synopsis }}</p>
                                <p class="card-text">
                                    <small class="text-muted">episode {{ episode.number }}</small>
                                </p>
                                <div class="action text-right">
                                    <a class="btn btn-sm btn-dark btn-sm"
                                       href="{{ path('wild_show_episode',
                                           { 'slug': program.title | replace({' ':'-'}) | lower,
                                               'season_id': season.id,
                                               'id': episode.id,
                                           }) }}">
                                        DÃ©tail
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(episodes) }}
            </div>
        </div>
    </div>
{% endblock %}
