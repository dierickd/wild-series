{% extends "base.html.twig" %}
{% block title 'Voir un acteur' %}

{% block body %}
    <div class="container">
        <h1>Voir un acteur</h1>
        <a class="btn btn-sm btn-dark my-4" href="{{ path('wild_index') }}">Retour</a>
        <div class="row">
            <div class="col-md-4 image-container mb-3">
                <img id="img" src="{{ actor.image }}" alt="{{ actor.name }}">
            </div>
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ actor.name }}</td>
                    </tr>
                    <tr>
                        <td>Programme</td>
                        <td>
                            {% for program in actor.programs %}
                                <a class="btn btn-dark m-1"
                                   href="{{ path('wild_show', { 'slug': program.title | replace({' ':'-'}) }) | lower }}">
                                    {{ program.title }}
                                </a>
                            {% else %}
                                <p>Aucun programme trouv√©</p>
                            {% endfor %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
