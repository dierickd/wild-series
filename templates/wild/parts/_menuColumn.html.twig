<div class="col-12 col-sm-3 col-md-3 col-lg-2 sidebar py-2 py-md-5">
    <h4>Catégories</h4>
    <ul class="nav flex-md-column">
        <li class="nav-item">
            <a class="nav-link"
               href="{{ path('wild_index') }}" title="Toutes les séries">
                <small class="mr-2"><i class="fas fa-arrow-right d-none d-md-inline-block"></i></small>
                Tout voir
            </a>
        </li>
        {% for category in categories %}
            <li class="nav-item">
                <a class="nav-link"
                   href="{{ path('wild_category', { 'categoryName': category.name }) }}"
                   title="Catégorie {{ category.name }}">
                    <small class="mr-2"><i class="fas fa-arrow-right d-none d-md-inline-block"></i></small>
                    {{ category.name }}
                </a>
            </li>
        {% endfor %}
        <hr>
        <li class="nav-item">
            <a class="nav-link"
               href="{{ path('wild_all_actors') }}"
               title="Tous les acteurs">
                <small class="mr-2"><i class="fas fa-arrow-right d-none d-md-inline-block"></i></small>
                Les acteurs
            </a>
        </li>
    </ul>
</div>
