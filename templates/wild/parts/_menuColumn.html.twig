<div class="col-12 col-sm-3 col-md-3 col-lg-2 sidebar py-5">
    <a href="{{ path('app_index') }}" class="btn btn-sm btn-dark mb-5">
        Retour à l'accueil
    </a>
    <h4>Catégories</h4>
    <ul class="nav flex-column">
        <a class="nav-link
           {% if categoryName is not defined %} active{% endif %}"
           href="{{ path('wild_index') }}" title="Toutes les séries">
            <small class="mr-2"><i class="fas fa-arrow-right"></i></small>
            Toutes les séries
        </a>
        {% for category in categories %}
            <li class="nav-item">
                <a class="nav-link
                    {% if categoryName is defined and categoryName.name == category.name %} active{% endif %}"
                   href="{{ path('wild_categoryName', { 'categoryName': category.name }) }}" title="{{ category.name }}">
                    <small class="mr-2"><i class="fas fa-arrow-right"></i></small>
                    {{ category.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>