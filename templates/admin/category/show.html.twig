{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }} | admin{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-5">Visualiser</h1>

        <table class="table table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-sm btn-secondary" href="{{ path('category_index') }}">Retour à la liste</a>

        <a class="btn btn-sm btn-dark" href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>

        {{ include('admin/category/_delete_form.html.twig') }}
    </div>
{% endblock %}
