{% extends 'base.html.twig' %}

{% block title %}Catégories | admin{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des catégories</h1>

        <a class="btn btn-dark my-5" href="{{ path('admin') }}">Accueil admin</a>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" href="{{ path('category_show', {'id': category.id}) }}">Afficher</a>
                        <a class="btn btn-sm btn-dark" href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-dark" href="{{ path('category_new') }}">Créer une catégorie</a>
    </div>
{% endblock %}
