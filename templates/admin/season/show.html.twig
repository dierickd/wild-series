{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <div class="container">
        <h1>Voir une saison</h1>
        <a class="btn btn-sm btn-dark my-4" href="{{ path('season_index') }}">Retour Ã  la liste</a>

        <table class="table">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ season.program.title }}</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Episodes</th>
                <td>{{ season.episodes | length }}</td>
            </tr>
            <tr>
                <th>Sortie</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            </tbody>
        </table>


        <a class="btn btn-sm btn-success" href="{{ path('season_edit', {'id': season.id}) }}">Editer</a>

        {{ include('admin/season/_delete_form.html.twig') }}
    </div>
{% endblock %}
