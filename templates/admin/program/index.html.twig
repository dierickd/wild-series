{% extends 'base.html.twig' %}

{% block title %}Liste des programmes | Admin{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des programmes</h1>
        <a class="btn btn-sm btn-dark my-4" href="{{ path('admin') }}">Accueil admin</a>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Affiche</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr>
                    <td>{{ program.id }}</td>
                    <td>
                        <img src="{{ program.poster }}" alt="{{ program.title }}">
                    </td>
                    <td>{{ program.title }}</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" href="{{ path('program_show', {'id': program.id}) }}">Afficher</a>
                        <a class="btn btn-sm btn-dark" href="{{ path('program_edit', {'id': program.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-dark" href="{{ path('program_new') }}">Nouveau programme</a>
    </div>
{% endblock %}
