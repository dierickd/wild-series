{% extends 'base.html.twig' %}

{% block title %}Liste des programmes | Admin{% endblock %}

{% block body %}
    <div class="container mb-5">
        <h1>Liste des programmes</h1>
        <a class="btn btn-sm btn-outline-dark my-4" href="{{ path('admin') }}">Accueil admin</a>
        <a class="btn btn-sm btn-dark" href="{{ path('program_new') }}">Nouveau programme</a>

        <table class="table table-hover">
            <thead class="resp-hidden">
            <tr>
                <th>Affiche</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr>
                    <td>
                        <span class="resp-show">Affiche</span>
                        <img src="{{ program.poster }}" alt="{{ program.title }}">
                    </td>
                    <td>
                        <span class="resp-show">Titre</span>
                        {{ program.title }}
                    </td>
                    <td>
                        <span class="resp-show">Catégorie</span>
                        {{ program.category.name }}
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-dark" href="{{ path('program_show', {'id': program.id}) }}">Afficher</a>
                        <a class="btn btn-sm btn-dark" href="{{ path('program_edit', {'id': program.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(programs) }}
        </div>
    </div>
{% endblock %}
