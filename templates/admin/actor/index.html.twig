{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des acteurs</h1>
        <a class="btn btn-sm btn-outline-dark my-4" href="{{ path('admin') }}">Accueil admin</a>
        <a class="btn btn-sm btn-dark" href="{{ path('actor_new') }}">Nouvel acteur</a>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for actor in actors %}
                <tr>
                    <td>{{ actor.name }}</td>
                    <td>
                        <a class="btn btn-sm btn-outline-dark" href="{{ path('actor_show', {'id': actor.id}) }}">Afficher</a>
                        <a class="btn btn-sm btn-dark" href="{{ path('actor_edit', {'id': actor.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun acteur enregistr√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
